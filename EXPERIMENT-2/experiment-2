/* HUFFMAN CODING*/
#include<iostream>
#include<string>
using namespace std;
class node{
    public:
    char ch;
    int frequency;
    node *left, *right;
    node(char c,int f){
        ch=c;
        frequency=f;
        left=right=NULL;
    }
};

void encode(string s){
    int frequency[256]={0};
    for (char c: s){
        frequency[c]++;
    }
    cout<<"Charcter frequency :"<<endl;
    for(int i=0;i<256;i++){
        if (frequency[i] > 0)
            cout<< char(i)<<" "<<frequency[i]<<endl;
    }
    cout<<"Encoded : "<<endl;
}

void decode(string s){
    cout<<"Decoded : "<<s<<endl;
}

int main(){
    string s;
    cout << "Enter string: ";
    getline(cin, s);
    encode(s);
    decode(s);

}
